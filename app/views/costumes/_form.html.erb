<%= simple_form_for(@costume) do |f| %>
    <%= f.input :name %>
    <%= f.input :category, placeholder: 'Fantasy, horror,...', class:''%>
    <%= f.input :size %>
    <%= f.input :price_per_day, placeholder: "Price in â‚¬" %>
    <%= f.input :available? %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class:'btn btn-flat btn-primary'%>
    <% if @costume.id == nil %>
      <%= link_to 'Cancel', costumes_path, class:'btn btn-secondary' %>
    <% else %>
      <%= link_to 'Cancel', costume_path(@costume), class:'btn btn-secondary' %>
    <% end %>
<% end %>
