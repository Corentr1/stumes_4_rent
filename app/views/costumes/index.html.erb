<div class="container mt-3">
  <div class="row">
    <div class="textwelcome" style="text-align: center">
      <p class="text2"><span>ARE YOU LOOKING FOR co'STUMES ?</span> We have <%= @costumes.count %> costumes ready for all your creative's occasions !</p>
        <h1 class="welcometext"><span> Check this 'stumes </span></h1>
    </div>
      <div class="eachcard">
    <div class="cards">
      <% @costumes.each do |costume| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path costume.photo.key %>')">
            <div class="index-card">
              <%= link_to costume.name, costume_path(costume), class: 'ms-3 text index-buttons' %>
            </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
